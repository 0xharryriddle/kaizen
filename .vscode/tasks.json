{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "bin/kaizen.exe", "./cmd/kaizen"],
      "group": "build",
      "problemMatcher": ["$go"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "group": "test",
      "problemMatcher": ["$go"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "kaizen: run dev",
      "type": "shell",
      "command": "${workspaceFolder}/bin/kaizen.exe",
      "args": ["run", "--dev"],
      "dependsOn": ["go: build"],
      "problemMatcher": []
    }
  ]
}
